.sidebar.animated.fadeInDown
  .image-info 2019 年夏 @ 内蒙响沙湾
  .logo-title
    .title
      img(src= url_for('images/logo@2x.png'),style="width:127px;border-radius:127px")
      h3(title="", style="margin-top: 0.5em")
        a(href="/")= config.title
      .description
        p= '10 年程序员'

  ul.social-links
    if theme.twitter
      li
        a(href="https://twitter.com/" + theme.twitter)
          i.fa.fa-twitter
    if theme.instagram
      li
        a(href="http://instagram.com/" + theme.instagram)
          i.fa.fa-instagram
    if theme.rss
      li
        a(href= url_for(theme.rss))
          i.fa.fa-rss
    if theme.weibo
      li
        a(href="http://weibo.com/" + theme.weibo)
          i.fa.fa-weibo
    if theme.facebook
      li
        a(href="http://facebook.com/" + theme.facebook)
          i.fa.fa-facebook
    if theme.github
      li
        a(href="http://github.com/" + theme.github)
          i.fa.fa-github
  include footer
